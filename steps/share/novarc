#!/usr/bin/env bash
echo "export OS_AUTH_URL=${OS_AUTH_PROTOCOL:-http}://`juju run --unit  keystone/0 "unit-get private-address"`:5000/v3"
juju run --unit keystone/0 "echo -n  | base64 -d | bash" | xargs -I% echo export OS_PROJECT_ID=%
echo export OS_PROJECT_NAME=admin
echo export OS_USER_DOMAIN_NAME=admin_domain
echo export OS_USERNAME=admin
echo export OS_PASSWORD=openstack
echo export OS_REGION_NAME=RegionOne
echo export OS_INTERFACE=public
echo export OS_IDENTITY_API_VERSION=3
